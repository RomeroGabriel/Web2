<html>
    <head>
        <title>New Teacher</title>
        <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
        <link rel="stylesheet" type="text/css" href="/stylesheets/teacher.css">
    </head>

    <body>
        <div class="container">
            <div class="box">
                <h3>Register a new teacher</h3>
                <div class="form">
                    <form action="/teacher/createTeacher" method="POST">
                        <div class="form-group">
                            <label for="name">Name*</label>
                            <input required name="name" type="text" id="name" placeholder="Enter the teacher's name">
                        </div>
                        <div class="form-group">
                            <label for="email">Email*</label>
                            <input required name="email" type="email" id="email" placeholder="Enter email">
                        </div>
                        <div class="form-group">
                            <label for="department">Department*</label>
                            <input required name="department" type="text" id="department" placeholder="Enter the teacher's department">
                        </div>
                        <% if(message.length > 0) {%>
                          <h4 class="emailExist"><%= message%></h4>
                        <%}%>
                        <button type="submit">Register</button>
                    </form>
                </div>
                <a style="margin-top:1em;" href="/">Back</a>
            </div>
        </div>
    </body>
</html>